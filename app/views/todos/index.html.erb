<h1> Pending Tasks:</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Due</th>
    <th></th>
  </tr>

<% @todos.each do |todo| %>
  <tr>
    <td><%= todo.name %></td>
    <% if todo.due.to_date() %>
      <td><%= todo.due %></td>
    <% end %>
    <td><%= link_to 'Remove This Item', todo, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

