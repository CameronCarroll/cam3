<% title "Todos" %>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
  </tr>
  <% for todo in @todos %>
   <tr>
      <td><%= link_to todo.title, todo %></td>
      <td><%= todo.content %></td>
      <td><%= link_to "Destroy This Item", todo, :confirm => "Are you sure you want to destroy #{todo.title}?", :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "Add New Item", new_todo_path %></p>
